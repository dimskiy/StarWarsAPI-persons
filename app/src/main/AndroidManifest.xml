<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="in.evilcorp.starwarsfinder">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".platform.StarWarsFinderApp"
        android:allowBackup="false"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Starwarsfinder"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name="in.evilcorp.starwarsfinder.ui.characterdetails.CharacterDetailsActivity"></activity>
        <activity android:name="in.evilcorp.starwarsfinder.ui.characterlist.CharacterListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>